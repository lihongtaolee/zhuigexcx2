<view class="assessment-page"><view data-event-opts="{{[['tap',[['goToShare',['$event']]]]]}}" class="share-icon" bindtap="__e"><image src="https://img.icons8.com/fluency/48/share-rounded.png" mode="aspectFit"></image></view><view class="question-container"><view class="assessment-header"><view class="progress-section"><view class="dimension-info"><view class="dimension-icon"><image src="{{currentDimension.icon}}" mode="aspectFit"></image></view><view class="dimension-text"><text class="dimension-title">{{currentDimension.title}}</text></view></view><view class="progress-bar-container"><view class="progress-bar" style="{{'width:'+(progressPercent+'%')+';'}}"></view><view class="progress-text">{{currentQuestionIndex+1+"/"+totalQuestions+"题"}}</view></view></view><view class="dimension-description"><text>{{currentDimension.description}}</text></view></view><view class="question-section"><swiper class="question-swiper" current="{{swiperCurrent}}" disable-touch="{{true}}" data-event-opts="{{[['change',[['handleSwiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{questions}}" wx:for-item="question" wx:for-index="index" wx:key="index"><swiper-item><view class="question-content"><text class="question-title">{{question.title}}</text><view class="options-list"><block wx:for="{{question.options}}" wx:for-item="option" wx:for-index="optIndex" wx:key="optIndex"><view data-event-opts="{{[['tap',[['selectOption',[index,optIndex]]]]]}}" class="{{['option',(selectedOptions[index]===optIndex)?'option-selected':'']}}" bindtap="__e"><view class="{{['radio-circle',(selectedOptions[index]===optIndex)?'radio-selected':'']}}"></view><text class="option-text">{{option}}</text></view></block></view></view><view class="navigation-buttons"><block wx:if="{{index>0}}"><button data-event-opts="{{[['tap',[['prevQuestion',['$event']]]]]}}" class="prev-btn" bindtap="__e">上一题</button></block><button data-event-opts="{{[['tap',[['nextQuestion',['$event']]]]]}}" class="next-btn" bindtap="__e">{{index===$root.g0-1?'完成':'下一题'}}</button></view></swiper-item></block></swiper></view></view><block wx:if="{{showDimensionTransition}}"><view class="dimension-transition"><view class="transition-content"><view class="dimension-icon large"><image src="{{nextDimension.icon}}" mode="aspectFit"></image></view><text class="transition-title">{{nextDimension.title}}</text><text class="transition-desc">{{nextDimension.description}}</text><button data-event-opts="{{[['tap',[['startNextDimension',['$event']]]]]}}" class="continue-btn" bindtap="__e">开始答题</button></view></view></block></view>